# Environment Configuration
# Set to 'development', 'test', or 'production'
NODE_ENV=development
PORT=5000

# Frontend URL - Used for generating links in emails and messages
FRONTEND_URL=http://localhost:3000

# API Base URL - Backend API endpoint
API_BASE_URL=http://localhost:5000
REACT_APP_API_URL=http://localhost:5000

# CORS Configuration - Frontend origin allowed to access the API
CORS_ORIGIN=http://localhost:3000

# ===== DATABASE CONFIGURATION =====
# MySQL/MariaDB Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=campus_marketplace
DB_DIALECT=mysql
DB_SSL=false

# ===== JWT AUTHENTICATION =====
# Secret key for signing JWT tokens (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
# Token expiration time (e.g., 7d, 24h, 1w)
JWT_EXPIRES_IN=7d

# ===== EMAIL CONFIGURATION =====
# SMTP Server for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@mysource.ng

# ===== FILE UPLOAD CONFIGURATION =====
# Directory to store uploaded files
UPLOAD_DIR=uploads
# Maximum file size in bytes (5MB default = 5242880)
MAX_FILE_SIZE=5242880

# ===== TURNSTILE (CLOUDFLARE BOT PROTECTION) =====
# Cloudflare Turnstile secret key for bot protection
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
# Set to 'true' to disable Turnstile during development
DISABLE_TURNSTILE=false

# ===== TELEGRAM BOT CONFIGURATION =====
# Enable/disable Telegram bot integration
ENABLE_TELEGRAM=true
# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Set to 'true' for long-polling, 'false' for webhooks
TELEGRAM_USE_POLLING=true

# ===== WEB PUSH NOTIFICATIONS =====
# VAPID keys for push notifications (generate with web-push library)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ===== PAYMENT GATEWAY (PAYSTACK) =====
# Paystack API secret key for payment processing
PAYSTACK_SECRET_KEY=your_paystack_secret_key

# ===== WHATSAPP INTEGRATION (TWILIO) =====
# Twilio Account credentials for WhatsApp integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
# Twilio WhatsApp number (sandbox format: whatsapp:+14155238886)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ===== OPENAI API =====
# OpenAI API key for AI features (WhatsApp chatbot)
OPENAI_API_KEY=your_openai_api_key
